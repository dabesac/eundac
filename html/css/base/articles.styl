/*article*/.item
	background white
	box-shadow 0 0 1px rgba(black, .2)
	
	.item__body
		position relative
		text-align center
		
		.icon
			background plomoOscuro
			border-right 1px solid plomoOscuro
			height 100%
			left 0
			margin-left 0
			padding 0
			position absolute
			width 10%

		p
			border-bottom 1px solid plomoOscuro
			margin-bottom 0
			margin-left 10%
			padding .5em 1em
		

	.item__footer
		text-align center

		p
			padding 1em
			margin-bottom 0

.item--blue
	border-top 1px azul solid
	border-bottom 1px plomoOscuro solid

	.item__body
		border-bottom 4px azul solid
		
		p:nth-child(1)
			color azul

@media screen and (min-width:700px)
	.item
		display inline-block
		margin-left 2%
		width 47%

.item-table
	box-shadow 0 0 1px rgba(black, .2)
	background white
	margin-bottom 1em

	.item-table__header
		border-bottom 4px plomoOscuro solid
		font-weight 700
		padding .7em
		text-align center

		small
			color plomoTexto

	.item-table__body
		position relative
		padding-bottom 2em

		&>p
			margin-bottom 0
			padding .7em
			padding-left 2em
	
		.detail__buttons
			position relative
			text-align right

			a
				margin-top .7em
				margin-right .5em

			a[class*="danger"]
				z-index 4

			&:before
				border-bottom 1px plomoOscuro solid
				content ""
				width 100% - 3em
				top 60%
				left 0
				position absolute
				z-index 0
				
	.item-table__body--interactive
		display none

	.item-table__body--interactive.active
		animation .3s content_show ease
		display block

	.item-table__body--interactive.inactive
		animation .3s content_hide ease

	.item-table__footer
		border-top 1px plomoOscuro solid
		margin-top 1em
		text-align center	

	.footer--buttons
		a
			border 0
			border-radius 0

	.footer--buttons--two
		overflow hidden
		a
			width 50%
			float left

@media screen and (min-width:700px)
	.item-table
		.item-table__body
			text-align center
			
			&>p
				text-align left
				display inline-block
				width 40%

		.item-table__body--edit
			text-align left

@media screen and (min-width:1000px)
	.item-table
		display table
		width 100%
		
		.item-table__header
			border-bottom 0
			border-right 2px plomoOscuro solid
			display table-cell
			vertical-align middle
			width 25%
			
		.item-table__body
			display table-cell
			vertical-align middle
			padding-top 1em

			&>p
				padding 0
				margin-bottom 1em

		.item-table__body--edit
			display block

		.item-table__body--interactive
			display none

		.item-table__footer
			border-top 0
			display table-cell
			position relative
			vertical-align middle
			width 12%
			
		.footer--buttons
			a
				align-items center
				box-shadow 0
				display flex
				height 100%
				justify-content center
				position absolute
				top 0
				max-height 83px
				width 100%

.item-table--interactive
	display none

.item-table--active
	.item-table__header 
		border-bottom 4px verdeClaro solid

//animations
.item-table--interactive.active
	animation .3s content_show ease
	display block

.item-table--interactive.inactive
	animation .3s content_hide ease