body
	color negroTexto

/*section*/.content
	background plomo
	width 100%

	.content__header
		background white
		display block
		color negroTexto
		border-bottom 1px plomoOscuro solid
		text-align center
		padding .5em 0
		
	.content__header--interaction
		display table
		width 100%

		p
			display none
			padding-left 1em
			text-align left
			width 50%

		.interaction__content
			display table-cell

			/*.column_uno
				display table-cell
				width 60%
				
			.column_dos
				display table-cell
				width 40%*/

		

	.content__body
		border-bottom 4px plomoOscuro solid
		padding 1em
		width 100%

		&>article
			margin 1.5em auto
			vertical-align top

		p.danger
			margin 4em 1em

.content--small
	max-width 1300px
	margin auto

.content--away
	margin-top 4em
		
/*section*/.content--normal

	.content__header
		color azul

/*section*/.content--warning

	.content__header
		color amarillo

/*section*/.content--buttons
	background white
	padding 1.5em 0
	overflow hidden

.content--selects
	margin auto

.group
	margin-bottom 3em

	.group__header
		border-bottom 1px plomoOscuro solid
		font-weight 700
		margin-bottom .5em
		padding .3em
		text-align center

.group--active
	.group__header
		color verde
	
.group--temporary
	.group__header
		color amarillo
	
.group--close
	.group__header
		color celeste
		
body>header
	background azul
	box-shadow 0 2px 1px rgba(azul, .2)
	height 70px
	position relative

	nav
		
		figure
			float left
			height 100%
			left 0
			overflow hidden
			padding 0.35em
			top 0
			width 17%

			img
				display block
				margin auto

		div:nth-of-type(1)
			border-left 2px azulOscuro solid
			display none
			height 100%
			padding .9em
			width auto
				
			p
				display block
				color white
				margin-bottom .5em
				padding 0 .2em
				text-shadow 2px 2px 0 rgba(azulOscuro, 1)

		div:nth-of-type(2)
			float right
			width 18%
			vertical-align top

			&>a
				color white
				display block
				font-size 2em
				padding .6em
				text-align center
		
			ul
				background azul
				border-top 1px azulOscuro solid
				display none
				margin-left -30%
				position absolute
				top 98%
				width 48%
				z-index 10

				li
					display block
					a
						color white
						display block
						height inherit
						padding 1em 1em

					a:hover
						background azulHover

			ul.active
				display block

body>nav
	background plomo
	box-shadow 0 2px 1px rgba(black, .2)
	height 35px
	position relative

	div:nth-of-type(1)
		display inline-block
		floa left
		height 100%
		width 17%

		a
			color plomoTexto
			height 100%
			font-size 1.4em
			text-align center
			padding .3em
			display block

		a:hover
			background plomoOscuro

	p
		border-left 2px plomoOscuro solid
		height 100%
		font-size 1.1em
		left 17%
		text-shadow 1px 1px 1px rgba(black, .2)
		padding .5em 1.5em
		position absolute
		top 0

	form
		float right
		height 100%
		width 35%
			
		input
			border 0
			border-left 2px plomoOscuro solid
			display inline-block
			height 100%
			margin-left 39%
			padding-left 1em
			transition all .3s
			width 50%

		input:focus
			outline 0
			margin-left 0
			width 89%

		button
			background white
			border 0
			box-shadow 0 0 0
			color plomoTexto
			font-size 1.2em
			float right
			height 100%
			padding-top .4em
			text-align center
			width 11%

		button:hover
			color azul
			
	.navigationButtonsSVCLayoutRight
		background rgba(black, 0.2)
		padding 1em
		position absolute
		right 3em
		top 50px
		z-index 5

		a
			border-radius 0
			position relative
			z-index 6

	.navigationButtonsSVCFixed
		position fixed
		top 10px

	.navigationButtonsSVCLayoutLeft
		background rgba(black, 0.2)
		padding 1em
		z-index 5
		position fixed
		top 130px
		left 3em

		a
			border-radius 0
			position relative
			z-index 6

body>.aux
	position relative
			
body>main
	padding 2em 1em 4em
	position relative
	width 99%
	left 0.5%

	&>p
		color plomoTexto

body>footer
	background negroPlomo
	box-shadow 0 -2px 0 rgba(black, 0.5)
	bottom 0
	height 38px
	margin-top 0.5em
	position fixed
	text-align center
	width 100%
	z-index 20
	
	ul
		padding 0
		height inherit
		width inherit

		li
			border-left 2px negroOscuro solid
			border-right 2px negroOscuro solid
			display inline-block
			height inherit
			padding 0
			margin-left -6px
			position relative
			width 200px

			a
				color white
				height 100%
				padding-top 0.7em
				position absolute
				left 0
				text-align center
				text-shadow 1.2px 1.2px 0 rgba(negroOscuro, 1)
				transition 0.25s background
				width 100%

			a:hover 
				background negroOscuro
				color white
				text-decoration none

			.desplegableLayout
				bottom 100%
				box-shadow 0 1px 3px rgba(black, 0.2)
				display none
				opacity 0
				position absolute
				width 100%

				ul
					width 102%

					li
						background negroPlomo
						height 38px
						margin-bottom -6px
						left 2px
						position relative
						width 100%

		li:hover .desplegableLayout
			animation menuAnimation .5s
			opacity 1
			display block

.hidden
	display none

div.classLoading_Overlay
	min-height 100%
	position fixed
	width 100%
	z-index 999

	.loading_message
		background white
		left 50%
		font-weight bold
		margin-left -3em
		padding 0.5em
		padding-left 1.5em
		padding-right 1.5em
		position absolute
		z-index 1000

	.loading_allBlack
		background black
		position absolute
		opacity 0.7
		height 100%
		width 100%
		z-index 999
