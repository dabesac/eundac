textarea
	resize none

.checkbox
	margin 0
	padding 0

	input
		display none

	label
		text-align center
		padding 1em
		display block
		margin-bottom 0
		transition all .3s ease
			
	span
		display none
			
	input:checked
		
		&~label
			span
				display inline

.checkbox--small

	label
		padding .5em

.checkbox--success
	label
		color verde

		&:hover, &:active
			background-color verde
			color white

	input:checked
		&~label
			color white
			background-color verde
			
.select
	background-color white
	border 1px plomoOscuro solid
	border-radius 2px
	color plomoTexto
	padding .7em
	width 100%
