input
	background-color transparent
	border 0
	transition all .3s ease

label
	transition all .3s ease

input:focus
select:focus
	outline 0

input[type=number]::-webkit-inner-spin-button,
input[type=number]::-webkit-outer-spin-button {
    -webkit-appearance: none;
    margin: 0;
}

textarea
	resize none

.checkbox
	margin 0
	padding 0

	input
		display none

	label
		text-align center
		padding 1em
		display block
		margin-bottom 0
		transition all .3s ease
			
	span
		display none
			
	input:checked
		
		&~label
			span
				display inline

.checkbox--small

	label
		padding .5em

.checkbox--success
	label
		color verde

		&:hover, &:active
			background-color verde
			color white

	input:checked
		&~label
			color white
			background-color verde

.checkbox--disabled-active
.checkbox--disabled-danger
	p
		background-color verde
		color white
		
	span
		display inline

.checkbox--disabled-danger
	p
		background-color rojo
	
			
.select
	background-color white
	border 1px plomoOscuro solid
	border-radius 2px
	color plomoTexto
	padding .7em
	width 100%

.form
	background-color white
	padding 2em 1em
	
	&>p
		margin-bottom .5em

.form__footer
	margin-top 1em

@media screen and (min-width:700px)
	.form__footer--messages
		margin-left auto
		margin-right auto
		width 70%

.form--medium
	max-width 800px
	margin-left auto
	margin-right auto
	
//inputs FTW
.blow
	height 7rem
	margin-bottom 1rem
	position relative
	
	&>label
		background-color white
		bottom 5px
		color plomoTexto
		cursor text
		font-weight 400
		left 0
		padding-left 1em
		position absolute
		text-align left
		width 100%

.blow--input
	input
		border-bottom 2px plomoOscuro solid
		display block
		height 40px
		bottom 0
		padding-left 2em
		padding-right 1em
		position absolute
		width 100%
		
		&:valid
		&:focus
			height 40px
			&:invalid
				border-bottom 2px rojo solid
			
			&~label
				bottom 35px
		
		&:valid
			border-bottom 2px verde solid

.blow--select
	select
		border 0
		background-color transparent
		border-bottom 2px plomoOscuro solid
		bottom 0
		color plomoTexto
		height 40px
		padding-left 2em
		padding-right 1em
		position absolute
		width 100%

		&:valid
		&:focus
			border-bottom 2px verde solid
			&~label
				bottom 35px

			&:invalid
				border-bottom 2px rojo solid

.blow--checked
	p
		color plomoTexto
		margin 0
		padding-top .8em
		padding-left 1em

	div
		top 29px
		position absolute
		height 100%
		text-align center
		width 50%
		
		input
			display none

			&:checked
				&+label
					color verde
					border-bottom 2px verde solid
					span
						display inline

		label
			border-bottom 2px plomoOscuro solid
			color plomoTexto
			padding .7em
			display block
			cursor pointer
			
			&:hover, &:active
				color verde

			span
				display none

	div:nth-of-type(2)
		left 50%

.blow--checked--three
	div
		width 33.3%
		
	div:nth-of-type(2)
		left 33.3%
		
	div:nth-of-type(3)
		left 66.6%
		width 33.4%


.blow--small
	display inline-block
	width 48.2%

	&:nth-of-type(even)
			margin-left 2%

@media screen and (min-width:700px)
	.blow--small
		display inline-block

	.blow--twice
		display inline-block
		width 48.7%
		vertical-align top

		&:nth-of-type(even)
			margin-left 2%

.group-input
	margin-top 3em

	.group-input__header
		position relative
		text-align center

		&>span
			background-color white
			color plomoTexto
			padding 0 1em
			position relative
			text-align center
			font-size .8em
			
		&:before
			content ""
			position absolute
			border-bottom 1px plomoOscuro solid
			width 100%
			top .7em
			left 0

.group-input:nth-of-type(1)
	margin-top .7em


.group-input--new
	.group-input__header
		&:before
			border-bottom 1px celeste solid

.group-input--edit
	.group-input__header
		&:before
			border-bottom 1px amarillo solid
