section.preregister
	
	section.semester, section.warning
		background plomo
		padding 0 0 1em

		header
			border 0
			border-bottom 1px plomoOscuro solid
			padding .5em
			background white

	section.warning
		color azul

		article
			margin 10em auto
		
	article.course
		background white
		border-bottom 1px plomoOscuro solid
		position relative
		text-align center

		p
			border-bottom 1px plomoOscuro solid
			margin 0 0 0 10%
			padding .5em 1em
			text-align left

		p:nth-of-type(1)
			background plomoOscuro
			color azul
			margin 0
			padding 0
			position absolute
			text-align center
			height 100%
			width 10%
			
		p:nth-of-type(2)
			border-top 1px plomoOscuro solid

			small
				color plomoTexto

		p:nth-of-type(4)
		p:nth-of-type(5)
			display inline-block
			padding .5em 1em
			text-align center
			
		p:nth-of-type(6)
			border 0
			text-align center

		a
			border 1px plomoOscuro solid
			border-left 0
			color verde
			margin-left 10%
			display block
			padding 1em

			span
				display none
				
			&:hover
					background verde
					color white
					

	article.course.active

		p
			border-bottom 1px verde solid

		p:nth-of-type(1)
			background verde
			color white

		p:nth-of-type(2)
			border-top 1px verde solid

		p:nth-of-type(6)
			border 0

		a
			background verde
			border 1px verde solid
			border-left 0
			border-top 1px plomoOscuro solid
			color white

			span
				display inline

