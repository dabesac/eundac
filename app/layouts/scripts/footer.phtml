            foreach ($menu as $key => $value) {
                $where['mid']=$value['mid'];
                $dat_module = $tb_module->_getOne($where);
                $menu[$key]['icon']=$dat_module['imgicon'];
                $linnk = $permission_recource->_getResources($where);
                $menu[$key]['link']=$linnk;
            }
        }
    }else{
        $where['parent'] = $parent;
        $menu = $permission_recource->_getAllMenu_parent($where);
        if (is_array($menu)) {
            foreach ($menu as $key => $value) {
                $where['mid']=$value['mid'];
