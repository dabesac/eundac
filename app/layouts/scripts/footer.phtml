<?php $auth = Zend_Auth::getInstance();

    if (!$auth->hasIdentity()) {
        exit();
    }
    $sesion = $auth->getStorage()->read();
    $parent = $sesion->rol['parent'];
    $home = $sesion->rol['module'];
