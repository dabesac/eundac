<script>
	$("#save").click(function(){
		$("#form").submit()
	})
	$("#form").submit(function(){
		$.ajax({
			type: "POST",
			url: $(this).attr("action"),
			data: $(this).serialize(),
			success: function(data){
				$("#editform").html(data);
				$('#editform').html("");
				$("#datastudent").load("/profile/public/studentfamily");
				$('#datastudent').removeClass('hidden');
			}
		})
		return false;
	})

	$("#type").change(function(){
		$("#type option:selected").each(function(){
			var vartype=$(this).val()
			if(vartype=="PA" || vartype=="MA"){
				$("#sex").addClass("hidden")
			}else{
				$("#sex").removeClass("hidden")
			}
		})
	})


	$("#moreinfo").addClass("hidden")
	$("#live").change(function(){
		$("#live option:selected").each(function(){
			var varlive=$(this).val()
			if(varlive=="S"){
				$("#moreinfo").removeClass("hidden")
			}else{
				$("#moreinfo").addClass("hidden")
			}
		})
	})
	
	$('#backFamilyBtn a').click(function (e) {
    	e.preventDefault()
      	$("#editform").html("")
      	$("#datastudent").removeClass("hidden")
  	})
   
</script>