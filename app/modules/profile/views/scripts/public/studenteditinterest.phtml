			type: 'POST',
			url: $(this).attr('action'),
			data: $(this).serialize(),
			success: function(data){
				$("#editform").html(data)
				$('#editform').html('');
				$('#datastudent').removeClass('hidden');
				$('#datastudent').load('/profile/public/studentinterest');
			}
		})
		return false;
	})

	$('#backeditBtn a').click(function (e) {
    	e.preventDefault()
    	$("#editform").html("");
      	$("#datastudent").removeClass('hidden');;
  	})
   
</script>