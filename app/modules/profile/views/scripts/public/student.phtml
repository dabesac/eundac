		$("#info").load("/profile/public/studentinfo");
		//-------------------------------------------------------------------------------------------------

		//Change Data
		var goTo = '';
		$('.btnObO').on('click', function(){
			$('.btnObO').removeClass('btnActive');
			$(this).addClass('btnActive');
			goTo = $(this).attr('goto');
			$('.dataContainer').fadeOut('fast');
			$('#' + goTo).fadeIn('fast');
		});
		//---------------------------------------------------
	});
</script>

