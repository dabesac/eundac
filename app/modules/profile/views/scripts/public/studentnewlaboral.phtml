<script>
	$("#save").click(function(){
		$("#form").submit()
	})
	$("#form").submit(function(){
		$.ajax({
			type: "POST",
			url: $(this).attr("action"),
			data: $(this).serialize(),
			success: function(data){
				$("#editform").html(data);
				$("#editform").html('');
				$("#datastudent").removeClass("hidden");
				$('#datastudent').load("/profile/public/studentlaboral");
			}
		})
		return false;
	})

	$('#backeditBtn a').click(function (e) {
    	e.preventDefault()
      	$("#datastudent").removeClass('hidden');
      	$("#editform").html('');
  	})
   
</script>