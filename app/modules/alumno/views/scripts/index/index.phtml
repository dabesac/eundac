<script>
	$('a').hover(function(){
		$(this).tooltip('toggle');
	});

	setInterval(function(){sliderForward();}, 5000);
	$('#moreInfo').addClass('hidden');
	$('#moreInfo').transition({ scale: 0 });

	$('#rightBtn').click(function(){
		sliderForward();
	});

	$('#leftBtn').click(function(){
		sliderBackward();
	});

	function sliderForward(){
		var size = $('.slider').find('.slide').size();
		$('.slider').find('.slide').each(function(index, value){
			if ($(value).hasClass('slide_active')) {
				$($('.slider').find('.slide').get(index)).slideUp(function(){
					$(value).removeClass('slide_active');
				});

				if (index+1 < size) {
					$($('.slider').find('.slide').get(index+1)).slideDown('slow');
					$($('.slider').find('.slide').get(index+1)).addClass('slide_active');
					return false;
				}else{
					$($('.slider').find('.slide').get(0)).slideDown('slow');
					$($('.slider').find('.slide').get(0)).addClass('slide_active');
					return false;
				};
			};
		});
	}

	function sliderBackward(){
		var size = $('.slider').find('.slide').size();
		$('.slider').find('.slide').each(function(index, value){
			if ($(value).hasClass('slide_active')) {
				$(value).slideUp();
				$($('.slider').find('.slide').get(index)).slideUp(function(){
					$(value).removeClass('slide_active');
				});

				if (index == 0) {
					$($('.slider').find('.slide').get(size-1)).slideDown();
					$($('.slider').find('.slide').get(size-1)).addClass('slide_active');
					return false;
				}else{
					$($('.slider').find('.slide').get(index-1)).slideDown();
					$($('.slider').find('.slide').get(index-1)).addClass('slide_active');
					return false;
				};
			};
		});
	}

	$('.slider').mouseenter(function(){
		$('.slider').transition({scale: 1.02});
	});
	$('.slider').mouseleave(function(){
		$('.slider').transition({scale: 1});
	});

	//mas Informacion
	$('.btn-info').click(function(){
		$('#moreInfo').removeClass('hidden', function(){
			$('#moreInfo').transition({ scale: 1 });
		});
	});

	$('#hidemoreInfo').click(function(){
		$('#moreInfo').transition({ scale: 0 }, function(){
			$('#moreInfo').addClass('hidden');
		});
	});

	//Boton Perfil
	$('#btnProfile').mouseenter(function(){
		$('#btnProfile').transition({ scale: 1.05 });
	});
	$('#btnProfile').mouseleave(function(){
		$('#btnProfile').transition({ scale: 1 });
	});

	//Boton Trabajos
	$('#btnJobs').mouseenter(function(){
		$('#btnJobs').transition({ scale: 1.05 });
	});
	$('#btnJobs').mouseleave(function(){
		$('#btnJobs').transition({ scale: 1 });
	});
	$("#btnJobs").click(function () {
	    $('html,body').animate({
	        scrollTop: $("#jobs").offset().top
	    }, 500);
	});

	//Boton Grafics
	$('#btnGrafics').mouseenter(function(){
		$('#btnGrafics').transition({ scale: 1.05 });
	});
	$('#btnGrafics').mouseleave(function(){
		$('#btnGrafics').transition({ scale: 1 });
	});
	$("#btnGrafics").click(function () {
	    $('html,body').animate({
	        scrollTop: $("#grafics").offset().top
	    }, 500);
	});
	
	//Volver a Top
	$(".backTopBtn").click(function () {
	    $('html,body').animate({
	        scrollTop: $("body").offset().top
	    }, 500);
	});
</script>

