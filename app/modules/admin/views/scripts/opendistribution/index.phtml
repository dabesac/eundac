<script>
	$('#error1').fadeOut('fast');
	$('#error2').fadeOut('fast');
	$('#anio').change(function(){
		$('#anio option:selected').each(function(){
			var anio = $(this).val();
			var ajax_data = {
                            "anio" : anio,
                            };
			$.ajax({
                type : 'post',
                url : '/admin/opendistribution/lperiodo/',
                data : ajax_data,
                success: function(data){
            		$('#periods').html(data);
            
                }
            });

		});
	});

	$('#show').click(function(){
		
		var perid = $('#periods').val();
		var facid = $('#faculty').val();
		if (perid){
			if (facid) {
					$("#data").show();
					$('#error1').fadeOut('fast');
					$('#error2').fadeOut('fast');
					$('#data').html('<center><img class="text-center" src="/img/spinner.gif"></center>');
					var ajax_data = {
                            "perid" : perid,
                            "facid" : facid,
                            };
					$.ajax({
		                type : 'post',
		                url : '/admin/opendistribution/view/',
		                data : ajax_data,
		                success: function(data){
		            		$('#data').html(data);
		                }
		            });	
			}
			else{
				$("#data").hide();
				$('#error1').fadeOut('fast');
				$('#error2').fadeIn('slow');
			}
		}else{
			$("#data").hide();
			$('#error1').fadeIn('slow');
		}
	});
</script>