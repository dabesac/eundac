<script>
	$("#datepress").datepicker();
	$('#perid').change(function(){
		var time  = $('#time').val();
		var perid = $(this).val();
		$('#number').val(perid+' - '+time);
	});

	$('#save').click(function(){
		$.ajax({
			type   :'post',
			url    : "/distribution/distribution/savedistribution",
			data   : $('#form').serialize(),
			success: function(data){
				$('.alert').addClass('hidden');
				if (data == 'exito') {
					$(location).attr("href", "/distribution/distribution/index");
				}else if (data == 'existe'){
					$('#exist').removeClass('hidden');
				}else if (data == 'falta-datos'){
					$('#missing').removeClass('hidden');
				}
			}
		})
	});

	//Close Alerts
	$('.close').click(function(){
		$('.alert').addClass('hidden');
	});

</script>
