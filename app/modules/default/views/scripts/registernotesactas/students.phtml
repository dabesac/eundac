<script type="text/javascript">
function retira(obj){
	$icon = $(obj);
    var ind = $icon.attr("value");
    var band = $icon.attr("band");
	if (band=="0") {
		$("#"+ind).attr("readonly",true);
		$("#"+ind).val("-3");
		$("#retirado_"+ind).show();
		$("#noretirado_"+ind).hide();
	}else{
		$("#"+ind).attr("readonly",false);
		$("#"+ind).val("");
		$("#retirado_"+ind).hide();
		$("#noretirado_"+ind).show();
	};
};

