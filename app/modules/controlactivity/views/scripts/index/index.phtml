<script>
	$("#session_date").click(function(){
		var td = $(this).parent()
		$("#openAlert").hide()
		$(".date_session").show()
		$("#save_session_date").show()
		$("#close_session_date").show()
		$(this).hide()
	})
	$("#close_session_date").click(function(){
		$("#openAlert").show()
		$("#session_date").show()
		$(".date_session").hide()
		$("#save_session_date").hide()
		$(this).hide()
	})
	$("#alertCourse").fadeOut('fast');
	//$('#alertCourse').fadeOut('fast');
	$('#openAlert').click(function(){
		$('#alertCourse').fadeIn('slow');
	});
	$('#closeAlert').click(function(){
		$('#alertCourse').fadeOut('slow');
	});
	$(".date_session").datepicker({ dateFormat: 'dd/mm/yy' })
	$("#save_session_date").click(function(){
		val_date = $(".date_session").val()
		if (val_date !='' && typeof(val_date)!='undefined') {
			date_save = val_date.split('/')
			date_val = date_save[2]+"-"+date_save[1]+"-"+date_save[0]
			// console.log(date_val)
			var href = $("#session_checket").attr('href')
			$(this).attr('href',href+"/date/"+$.base64.encode(date_val))
		}
	})
