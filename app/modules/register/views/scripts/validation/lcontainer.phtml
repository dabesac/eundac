<script>
    $("#nota").keyup(function()
    {
        var v = $(this).val();
        if (isNaN(v))
        {
            $("#nota").val("");
            $(".msg").html("* solo se permite nÃºmeros");
        }
        else
        {
            if ((v > 20 || v < 1))
            {
                $("#nota").val("");
                $(".msg").html("* Ingrese de 0 a 20");
            }
            else
            {
                $(".msg").html("");
            }
        }

    });

    $("#nota").blur(function()
    {
        var vnota = $(this).val();
        if (vnota<11 && vnota>1)
        {
            $("#nota").focus();
            $("#nota").val("");
            $(".msg").html("* CONVALIDACION: notas aprobatorias");
        }
    });

    $("#resolucion").keyup(function()
    {
        var r = $(this).val();
        $("#resolucion").val(r.toUpperCase());
    });
</script>

